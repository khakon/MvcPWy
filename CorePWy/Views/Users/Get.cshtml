@model CorePWy.Models.UserModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit User</h2>
<div class="row">
    <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form role="form">
                <input id="userId" class="form-control" name="UserId" type="hidden" value="@Model.UserId">
                <div class="form-group">
                    <label>Name</label>
                    <input id="userName" type="text" class="form-control" name="UserName" placeholder="Name" value="@Model.UserName">
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <input id="gender" type="text" class="form-control" name="Gender" placeholder="Gender" value="@Model.Gender">
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="submitForm" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    <div class="col-lg-3"></div>
    </div>
@section scripts{
    <script>
            $('#submitForm').click(function () {
                var par = {};
                par.UserId = $('#userId').val();
                par.UserName = $('#userName').val();
                par.Gender = $('#gender').val();
                $.post('/Users/AddUpdate', par, function (response) {
                    if (response.success) window.location = '/';
                    alert(response.message);
                });
            });
    </script>

}